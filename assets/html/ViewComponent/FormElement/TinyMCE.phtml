<div class='<?= $this->get_class_list() ?>'>
    <? if ($this->is_collapsible()): ?>
        <table class="header">
            <tr>
                <td>
                    <label for='<?= $this->get_name() ?>' <? if ($this->is_required())
                    echo ' class=\'required\'' ?>>
                    <?= $this->get_title() ?>
                </label>
            </td>
            <td class="right">
                <span class="collapse-editor" data-editor="<?= $this->get_name() ?>"><i class="fa fa-chevron-down"></i></span>
            </td>
        </tr>
    </table>
    <? else: ?>
        <label for='<?= $this->get_name() ?>' <? if ($this->is_required())
        echo ' class=\'required\'' ?>>
        <?= $this->get_title() ?>
    </label>
    <? endif ?>
