        tinyMCE.init({
            selector: '#<?= $this->get_name() ?>',
            language: 'de',
            menubar: false,
            toolbar_sticky: true,
            contextmenu: false,
            browser_spellcheck: true,
            plugins: '<?= $this->get_plugin_list() ?>',
            toolbar: [<?= $this->get_toolbar_list() ?>],
            paste_as_text: true
        });
        </script>
    </div>
